<% layout('layouts/boilerplate') -%>
    <h1>All CampSites!</h1>
    <% for (let camps of campSites) { %>
        <div class="card" mb-3>
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" alt="" src="<%=camps.image[0].url%>">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= camps.title %>
                        </h5>
                        <p class="card-text">
                            <%= camps.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= camps.location%>
                            </small>
                        </p>
                        <a class="btn btn-primary" href="/campsites/<%=camps._id%>">View <%=camps.title%>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
            <a href="/campsites/new">Add CampSites</a>