<% layout('layouts/boilerplate') -%>

    <div class="row">
        <h1 class="text-center">Edit CampSite</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/campsites/<%=camp._id%>?_method=PUT" method="POST" class="mb-3 Validated-form"
                enctype="multipart/form-data" novalidate>
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" id="title" name="CampSite[title]" value="<%=camp.title%>"
                        required>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" class="form-control" id="location" name="CampSite[location]"
                        value="<%=camp.location%>" required>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Add More Image</label><br>
                    <input type="file" name="image" id="image" multiple>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                            aria-describedby="price-label" name="CampSite[price]" value="<%=camp.price%>" required>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="CampSite[description]" class="form-control" id="description" cols="30" rows="10"
                        required><%= camp.description %></textarea>
                </div>
                <div class="mb-3">
                    <% camp.image.forEach(function(img, i) { %>

                        <img src="<%=img.thumbnail %>" class="img-thumbnail" alt="">
                        <div class="form-check-inline">
                            <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.fileName%>">
                        </div>
                        <label for="image-<%=i%>">Delete?</label>
                        <% })%>
                </div>
                <button class="btn btn-info">Update CampSites</button>
            </form>
            <a href="/campsites/<%=camp.id%>">Back to Campsite</a>
        </div>
    </div>