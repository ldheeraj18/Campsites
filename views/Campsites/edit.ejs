<% layout('layouts/boilerplate') -%>

    <div class="row">
        <h1 class="text-center">Edit CampSite</h1>
        <div class="col-6 offset-3">
            <form action="/campsites/<%=camp._id%>?_method=PUT" method="POST" class="mb-3">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" id="title" name="CampSite[title]" value="<%=camp.title%>">
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" class="form-control" id="location" name="CampSite[location]"
                        value="<%=camp.location%>">
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Image URL</label>
                    <input type="text" class="form-control" id="image" name="CampSite[image]" value="<%=camp.image%>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                            aria-describedby="price-label" name="CampSite[price]" value="<%=camp.price%>">
                    </div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="CampSite[description]" class="form-control" id="description" cols="30"
                        rows="10"><%= camp.description %></textarea>
                </div>
                <button class="btn btn-info">Update CampSites</button>
            </form>
            <a href="/campsites/<%=camp.id%>">Back to Campsite</a>
        </div>
    </div>